services:
  postgres:
    container_name: "{{ mealie_container_prefix }}-db"
    image: postgres:15
    restart: unless-stopped
    networks:
      - "{{ mealie_network }}"
    volumes:
      - "{{ mealie_volume_db }}:/var/lib/postgresql/data"
    environment:
      POSTGRES_USER: "{{ mealie_postgres_user }}"
      POSTGRES_PASSWORD: "{{ mealie_postgres_password }}"

  mealie:
    image: ghcr.io/mealie-recipes/mealie:latest
    container_name: "{{ mealie_container_prefix }}-mealie"
    restart: unless-stopped
    ports:
      - "{{ docker_gateway }}:{{ mealie_service_port }}:9000"
    networks:
      - "{{ mealie_network }}"
    deploy:
      resources:
        limits:
          memory: 1000M
    depends_on:
      - postgres
    volumes:
      - "{{ mealie_volume_data }}:/app/data/"
    environment:
      PUID: 1000
      PGID: 1000
      TZ: "{{ ansible_date_time.tz }}"
      MAX_WORKERS: 1
      WEB_CONCURRENCY: 1
      BASE_URL: "https://{{ mealie_domain }}/"
      DB_ENGINE: postgres
      POSTGRES_USER: "{{ mealie_postgres_user }}"
      POSTGRES_PASSWORD: "{{ mealie_postgres_password }}"
      POSTGRES_SERVER: postgres
      POSTGRES_PORT: 5432
      POSTGRES_DB: mealie
      SMTP_HOST: "{{ smtp_server }}"
      SMTP_PORT: "{{ smtp_port }}"
      SMTP_FROM_NAME: Mealie
      SMTP_FROM_EMAIL: "mealie@{{ smtp_sender_domain }}"
      SMTP_USER: "{{ mealie_smtp_user }}"
      SMTP_PASSWORD: "{{ mealie_smtp_password }}"
      ALLOW_SIGNUP: false

networks:
  "{{ mealie_network }}":