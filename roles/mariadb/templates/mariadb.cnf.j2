[client-server]
port = {{ mariadb_port }}
socket = /run/mysqld/mysqld.sock

[server]
pid-file             = /run/mysqld/mysqld.pid
basedir              = /usr
datadir              = /var/lib/mysql
tmpdir               = /tmp
bind-address         = {{ docker_gateway }}
expire_logs_days     = 10
character-set-server = utf8mb4
collation-server     = utf8mb4_general_ci
