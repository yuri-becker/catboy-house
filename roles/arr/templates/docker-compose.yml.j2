services:
  sonarr:
    image: linuxserver/sonarr:latest
    container_name: "{{ arr_container_prefix }}-sonarr"
    restart: unless-stopped
    ports:
      - "{{ docker_gateway }}:{{ arr_sonarr_port }}:8989"
    volumes:
      - "{{ arr_volume_sonarr }}:/config"
      - "{{ downloads_path }}:/downloads"
      - "{{ tv_path }}:/tv"
      - "/dev/rtc:/dev/rtc"
  radarr:
    image: linuxserver/radarr:latest
    container_name: "{{ arr_container_prefix }}-radarr"
    restart: unless-stopped
    ports:
      - "{{ docker_gateway }}:{{ arr_radarr_port }}:7878"
    volumes:
      - "{{ arr_volume_radarr }}:/config"
      - "{{ downloads_path }}:/downloads"
      - "{{ movies_path }}:/movies"
  prowlarr:
    image: linuxserver/prowlarr:latest
    container_name: "{{ arr_container_prefix }}-prowlarr"
    depends_on:
      - sonarr
      - radarr
    restart: unless-stopped
    ports:
      - "{{ docker_gateway }}:{{ arr_prowlarr_port }}:9696"
    volumes:
      - "{{ arr_volume_prowlarr }}:/config"

