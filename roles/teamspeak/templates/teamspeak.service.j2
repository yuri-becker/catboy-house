[Unit]
Description=TeamSpeak
After=syslog.target network.target mariadb.service

[Service]
Type=simple
User={{ teamspeak_user }}
StandardOutput=journal
StandardError=journal
WorkingDirectory={{ teamspeak_pwd }}
ExecStart={{ teamspeak_pwd }}/tsserver --accept-license --config-file ../tsserver.yaml
Restart=on-failure

[Install]
WantedBy=multi-user.target
